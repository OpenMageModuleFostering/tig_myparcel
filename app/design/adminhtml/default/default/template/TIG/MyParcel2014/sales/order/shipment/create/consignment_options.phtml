                <?php foreach($_customsTypeOptions as $_option):?>
                    <?php $_selected = ''; ?>
                    <?php if ($_option['value'] == $_defaultCustomsCode): ?>
                        <?php $_selected = 'selected="selected"'; ?>
                    <?php endif; ?>

                    <option value="<?php echo $_option['value']; ?>" <?php echo $_selected ?>>
                        <?php echo $this->__($_option['label']); ?>
